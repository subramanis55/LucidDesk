                    </Path>
                </Viewbox>
            </Border>
         
            <Grid Grid.Column="1" >
                <Label Name="IsLabel"  Content="{Binding Text}" Padding="{Binding TextPadding}" Panel.ZIndex="-1" Cursor="Hand"></Label>
                <TextBox Name="Textbox" IsTabStop="True"      Cursor="IBeam"   Margin="0" Padding="{Binding TextPadding}" BorderBrush="{Binding TextboxBorderBrush}" BorderThickness="{Binding TextboxBorderThickness}"  FontSize="{Binding RelativeSource={RelativeSource AncestorType={x:Type UserControl}}, Path=FontSize}" Text="{Binding Text,Mode=TwoWay}" Foreground="{Binding RelativeSource={RelativeSource AncestorType={x:Type UserControl}},Path=Foreground}"  Background="{Binding RelativeSource={RelativeSource AncestorType={x:Type UserControl}},Path=Background}"  FontFamily="{Binding RelativeSource={RelativeSource AncestorType={x:Type UserControl}},Path=FontFamily}">
                </TextBox>
                <Label Name="PlaceholderLabel" Cursor="Hand"  Content="{Binding Placeholder}" Background="Transparent"   Padding="15 0 0 0"  VerticalAlignment="Center" FontSize="{Binding RelativeSource={RelativeSource AncestorType={x:Type UserControl}}, Path=FontSize}"   Foreground="{Binding PlaceholderColor}"></Label>
            </Grid>
            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <Button Width="40" Style="{StaticResource FuntionButton}" >
                    <Button.ToolTip>
                        <ToolTip Content="Screen"></ToolTip>
                    </Button.ToolTip>
