<Window x:Class="LucidDesk.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LucidDesk"
         xmlns:Usercontrol="clr-namespace:LucidDesk.UserControls"
        mc:Ignorable="d"
        Title="TestWindow" Height="450" Width="800">
    <Grid>
      
       
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
     
        <StackPanel Grid.Column="1">
            <TextBox Name="MessageTextBox" FontSize="28" Height="45" Margin="15"></TextBox>
            <Button Height="50" Click="CreateNotificationClick" Width="100" Margin="15" Content="CreateNotification"></Button>
            <Button Height="50" Click="CreateDeskNotificationClick" Width="100" Margin="15" Content="CreateNotification"></Button>
            <Button Height="50" Click="Create3NotificationClick" Width="100" Margin="15" Content="CreateNotification"></Button>
        </StackPanel>
    </Grid>
</Window>
